<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Nurse</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-primary text-white min-vh-100">
        <%- include('receptionNavbar') %>  <!-- Since it's in /views -->
      </div>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 p-4">
        <div class="card shadow mx-auto" style="max-width: 600px;">
          <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Add Nurse</h4>
          </div>
          <div class="card-body">
            <form action="/reception/add-nurse" method="POST">
              <div class="mb-3">
                <label for="nurse_name" class="form-label">Nurse Name</label>
                <input type="text" name="nurse_name" id="nurse_name" class="form-control" required>
              </div>

              <div class="mb-3">
                <label for="nurse_contact" class="form-label">Contact</label>
                <input type="text" name="nurse_contact" id="nurse_contact" class="form-control">
              </div>

              <div class="mb-3">
                <label for="nurse_shift" class="form-label">Shift</label>
                <select name="nurse_shift" id="nurse_shift" class="form-select" required>
                  <option value="">-- Select Shift --</option>
                  <option value="Morning">Morning</option>
                  <option value="Evening">Evening</option>
                  <option value="Night">Night</option>
                </select>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-success">Submit</button>
              </div>
            </form>

            <div class="text-center mt-3">
              <a class="btn btn-link" href="/reception/dashboard">‚Üê Back to Dashboard</a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

