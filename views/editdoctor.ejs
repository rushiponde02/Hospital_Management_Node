<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Doctor</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .admin-header {
    background-color: #007bff; 
      color: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .admin-header a {
      color: #ffc107;
      text-decoration: none;
    }

    .admin-header a:hover {
      text-decoration: underline;
    }

    .form-container {
      background-color: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      max-width: 600px;
      margin: auto;
    }
  </style>
</head>

<body>

  <!-- Header -->
  <div class="admin-header">
    <h1 class="mb-0">Admin Dashboard</h1>
    <a href="/logout">Logout <i class="fa fa-sign-out" aria-hidden="true"></i></a>
  </div></a>
  </div>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 p-0">
        <%- include('adminNavbar') %>
      </div>

      <!-- Main Content -->
      <main class="col-md-9 col-lg-10 px-4 py-4">
        <div class="form-container">
          <h2 class="mb-4">Edit Doctor</h2>
          <form action="/admin/edit-doctor/<%= doctor.doctor_id %>" method="POST" class="needs-validation" novalidate>
            
            <div class="mb-3">
              <label class="form-label">Name</label>
              <input type="text" name="doctor_name" class="form-control" value="<%= doctor.doctor_name %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Specialization</label>
              <input type="text" name="doctor_specialization" class="form-control" value="<%= doctor.doctor_specialization %>">
            </div>

            <div class="mb-3">
              <label class="form-label">Contact</label>
              <input type="text" name="doctor_contact" class="form-control" value="<%= doctor.doctor_contact %>">
            </div>

            <div class="mb-3">
              <label class="form-label">Experience</label>
              <input type="number" name="doctor_experience" class="form-control" value="<%= doctor.doctor_experience %>">
            </div>

            <div class="mb-3">
              <label class="form-label">Status</label>
              <select name="status" class="form-select">
                <option value="Active" <%= doctor.status === 'Active' ? 'selected' : '' %>>Active</option>
                <option value="Inactive" <%= doctor.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
              </select>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/admin/view-doctor" class="btn btn-secondary ms-2">Cancel</a>
          </form>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

