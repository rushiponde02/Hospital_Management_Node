<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Patient List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .bill-section {
      border: 1px solid #ccc;
      padding: 20px;
      margin-top: 20px;
      background-color: #f8f9fa;
    }

    @media print {
      body * {
        visibility: hidden;
      }

      .bill-section,
      .bill-section * {
        visibility: visible;
      }

      .bill-section {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-primary text-white min-vh-100 p-0">
        <%- include('receptionNavbar') %>
      </div>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 p-4">
        <h3 class="text-center mb-4">Patient List</h3>

        <div class="table-responsive">
          <table class="table table-bordered align-middle text-center">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Status</th>
                <th>Doctor</th>
                <th>Room</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% patients.forEach(p=> { %>
                <tr>
                  <td>
                    <%= p.patient_id %>
                  </td>
                  <td>
                    <%= p.patient_name %>
                  </td>
                  <td>
                    <%= p.status %>
                  </td>
                  <td>
                    <%= p.doctor_name %> (<%= p.doctor_specialization %>)
                  </td>
                  <td>
                    <%= p.room_no %> (<%= p.room_type %>)
                  </td>
                  <td>
                    <% if (p.status==='Visited' ) { %>
                      <% if (!p.bill_id) { %>
                        <button type="button" class="btn btn-success btn-sm"
                          onclick="toggleBillForm(<%= p.patient_id %>)">
                          Generate Bill
                        </button>

                        <!-- START: Actual form -->
                        <div id="billForm-<%= p.patient_id %>" class="bill-section d-none mt-3">
                          <form action="/reception/generate-bill" method="POST"
                            onsubmit="return confirm('Are you sure you want to generate this bill?');">
                            <input type="hidden" name="patient_id" value="<%= p.patient_id %>">
                            <!-- <input type="hidden" name="room_charges" value="<%= p.room_charge || 0 %>"> -->


                            <h5 class="text-primary">üè• Hospital: RR Hospital</h5>
                            <h6>üë®‚Äç‚öïÔ∏è Doctor: <%= p.doctor_name %> (<%= p.doctor_specialization %>)</h6>
                            <h6>üë§ Patient: <%= p.patient_name %> | Age: <%= p.patient_age %> | Gender: <%=
                                    p.patient_gender %>
                            </h6>
                            <h6>üìû Contact: <%= p.patient_contact %>
                            </h6>
                            <h6>üìù Issue: <%= p.patient_issue %>
                            </h6>
                            <h6>üõèÔ∏è Room: <%= p.room_no %> (<%= p.room_type %>)</h6>
                            <h6>üìÖ Admitted: <%= p.admitted_date ? p.admitted_date.toISOString().split("T")[0] : "-" %>
                            </h6>
                            <h6>üìÖ Discharge: <%= p.discharge_date ? p.discharge_date.toISOString().split("T")[0] : "-"
                                %>
                            </h6>
                            <hr>

                            <div class="row g-2">
                              <div class="col-md-4">
                                <label>Doctor Charges</label>
                                <input type="number" name="doctor_charges" class="form-control" required>
                              </div>
                              <div class="col-md-4">
                                <label>Medicine Charges</label>
                                <input type="number" name="medicine_charges" class="form-control" required>
                              </div>
                              <div class="col-md-4">
                                <label>Medicine Quantity</label>
                                <input type="number" name="medicine_quantity" class="form-control" required>
                              </div>
                            </div>

                            <div class="mt-3 d-flex justify-content-between">
                              <button type="submit" class="btn btn-primary">üíæ Save Bill</button>
                              <button type="button" class="btn btn-outline-secondary"
                                onclick="printBill(<%= p.patient_id %>)">üñ®Ô∏è Print</button>
                            </div>
                          </form>
                        </div>
                        <!-- END: Form -->
                        <% } else { %>
                          <a href="/reception/view-bill/<%= p.patient_id %>" class="btn btn-outline-info btn-sm">View Bill</a>
                          <% } %>
                            <% } else { %>
                              <button class="btn btn-secondary btn-sm" disabled>Waiting</button>
                              <% } %>
                  </td>

                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
    function toggleBillForm(patientId) {
      const form = document.getElementById('billForm-' + patientId);
      form.classList.toggle('d-none');
    }

    function printBill(patientId) {
      const billSection = document.getElementById('billForm-' + patientId);
      if (!billSection) return;

      const originalContent = document.body.innerHTML;
      document.body.innerHTML = billSection.outerHTML;
      window.print();
      document.body.innerHTML = originalContent;
      location.reload(); // reload to restore full content
    }
  </script>
</body>

</html>