<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Patient List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-primary text-white min-vh-100 p-0">
        <%- include('receptionNavbar') %>
      </div>

      <!-- Main content -->
      <div class="col-md-9 col-lg-10 p-4">
        <h3 class="text-center mb-4">Patient List</h3>

       <div class="d-flex justify-content-center mb-4">
            <input type="text" id="searchBox" class="form-control w-50" placeholder="Search by patient name...">
        </div>


        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-primary">
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Contact</th>
                <th>Issue</th>
                <th>Room</th>
                <th>Nurse</th>
                <th>Doctor</th>
                <th>Status</th>
                <th>Admitted</th>
                <th>Discharge</th>
              </tr>
            </thead>
            <tbody id="patientTable">
              <% patients.forEach(p => { %>
                <tr>
                  <td><%= p.patient_id %></td>
                  <td><%= p.patient_name %></td>
                  <td><%= p.patient_age %></td>
                  <td><%= p.patient_gender %></td>
                  <td><%= p.patient_contact %></td>
                  <td><%= p.patient_issue %></td>
                  <td><%= p.room_no %> (<%= p.room_type %>)</td>
                  <td><%= p.nurse_name %></td>
                  <td><%= p.doctor_name %></td>
                  <td><%= p.status %></td>
                  <td><%= p.admitted_date?.toISOString().split("T")[0] %></td>
                  <td><%= p.discharge_date ? p.discharge_date.toISOString().split("T")[0] : "-" %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div class="text-center mt-4">
          <a href="/reception/dashboard" class="btn btn-outline-secondary">‚Üê Back to Dashboard</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Search functionality -->
  <script>
    document.getElementById("searchBox").addEventListener("input", function () {
      const query = this.value.trim();
      fetch(`/search-patient?name=${encodeURIComponent(query)}`)
        .then(res => res.json())
        .then(data => {
          const tbody = document.getElementById("patientTable");
          tbody.innerHTML = "";

          if (data.length === 0) {
            tbody.innerHTML = `<tr><td colspan="12">No patients found.</td></tr>`;
            return;
          }

          data.forEach(p => {
            const row = `
              <tr>
                <td>${p.patient_id}</td>
                <td>${p.patient_name}</td>
                <td>${p.patient_age || ""}</td>
                <td>${p.patient_gender || ""}</td>
                <td>${p.patient_contact || ""}</td>
                <td>${p.patient_issue || ""}</td>
                <td>${p.room_no || ""} (${p.room_type || ""})</td>
                <td>${p.nurse_name || ""}</td>
                <td>${p.doctor_name || ""}</td>
                <td>${p.status || ""}</td>
                <td>${p.admitted_date ? new Date(p.admitted_date).toISOString().split("T")[0] : ""}</td>
                <td>${p.discharge_date ? new Date(p.discharge_date).toISOString().split("T")[0] : "-"}</td>
              </tr>
            `;
            tbody.innerHTML += row;
          });
        });
    });
  </script>
</body>
</html>
