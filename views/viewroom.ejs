<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Room List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">

      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-primary text-white min-vh-100 p-0">
        <%- include('receptionNavbar') %>
      </div>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 p-4">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Room List</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Room No</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Charges/Day</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% rooms.forEach(room => { %>
                    <tr>
                      <td><%= room.room_no %></td>
                      <td><%= room.room_type %></td>
                      <td><%= room.room_status %></td>
                      <td><%= room.charges_per_day %></td>
                      <td>
                        <a href="/reception/edit-room/<%= room.room_no %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/reception/delete-room/<%= room.room_no %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this room?')">Delete</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>

            <div class="text-center mt-3">
              <a href="/reception/dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
