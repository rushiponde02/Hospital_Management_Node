<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Assigned Patients</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-primary text-white min-vh-100 p-0">
        <%- include('doctorNavbar') %>
      </div>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 p-4">
        <div class="card shadow">
          <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Assigned Patients</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
              <thead class="table-primary">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Issue</th>
    <th>Room</th>
    <th>Nurse</th>
    <th>Status</th>
    <th>Admitted</th>
    <th>Action</th>
  </tr>
</thead>
<tbody>
  <% patients.forEach(p => { %>
    <tr>
      <td><%= p.patient_id %></td>
      <td><%= p.patient_name %></td>
      <td><%= p.patient_issue %></td>
      <td><%= p.room_no %> (<%= p.room_type %>)</td>
      <td><%= p.nurse_name %></td>
      <td><%= p.status %></td>
      <td><%= p.admitted_date ? p.admitted_date.toISOString().split('T')[0] : '' %></td>
      <td>
        <a href="/doctor/show-patient/<%= p.patient_id %>" class="btn btn-sm btn-success">Prescription</a>
      </td>
    </tr>
  <% }) %>
</tbody>

              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
