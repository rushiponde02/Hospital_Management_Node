<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Contact</th>
      <th>Shift</th>
      <th>Actions</th> <!-- New column -->
    </tr>
  </thead>
  <tbody>
    <% nurses.forEach(nurse => { %>
      <tr>
        <td><%= nurse.nurse_id %></td>
        <td><%= nurse.nurse_name %></td>
        <td><%= nurse.nurse_contact %></td>
        <td><%= nurse.nurse_shift %></td>
        <td>
          <a href="/reception/edit-nurse/<%= nurse.nurse_id %>">Edit</a> |
          <a href="/reception/delete-nurse/<%= nurse.nurse_id %>" onclick="return confirm('Are you sure you want to delete this nurse?')">Delete</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
