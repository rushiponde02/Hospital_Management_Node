<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Nurses</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-primary text-white min-vh-100">
        <%- include('receptionNavbar') %>
      </div>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 p-4">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Nurse List</h4>
          </div>
          <div class="card-body table-responsive">
            <% if (nurses.length > 0) { %>
              <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Shift</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% nurses.forEach(nurse => { %>
                    <tr>
                      <td><%= nurse.nurse_id %></td>
                      <td><%= nurse.nurse_name %></td>
                      <td><%= nurse.nurse_contact %></td>
                      <td><%= nurse.nurse_shift %></td>
                      <td>
                        <a href="/reception/edit-nurse/<%= nurse.nurse_id %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/reception/delete-nurse/<%= nurse.nurse_id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this nurse?')">Delete</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <p class="text-muted">No nurse records found.</p>
            <% } %>
          </div>
        </div>

        <div class="mt-3">
          <a href="/reception/dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
        </div>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
