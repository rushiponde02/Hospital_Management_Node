<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Medicine List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-primary text-white min-vh-100 p-0">
        <%- include('receptionNavbar') %>
      </div>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 p-4">
        <div class="card shadow">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-center">Medicine List</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-striped">
                <thead class="table-primary text-center">
                  <tr>
                    <th>ID</th>
                    <th>Medicine</th>
                    <th>Price</th>
                  </tr>
                </thead>
                <tbody class="text-center">
                  <% medicines.forEach(m => { %>
                    <tr>
                      <td><%= m.medical_id %></td>
                      <td><%= m.medicine_name %></td>
                      <td>₹ <%= m.price_medicine %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>

            <div class="text-center mt-3">
              <a href="/doctor/dashboard" class="btn btn-outline-secondary">← Back to Dashboard</a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

