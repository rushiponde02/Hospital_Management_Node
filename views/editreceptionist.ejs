<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Receptionist</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css"> <!-- Your custom styles -->
</head>
<body>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar / Navbar -->
      <div class="col-md-3 col-lg-2 bg-light min-vh-100 p-0">
        <%- include('adminNavbar') %>
      </div>

      <!-- Main Content -->
      <div class="col-md-9 col-lg-10 py-4 px-4">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-center">Edit Receptionist</h4>
          </div>
          <div class="card-body">
            <form action="/admin/edit-reception/<%= reception.reception_id %>" method="POST">
              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" id="name" name="reception_name" class="form-control" value="<%= reception.reception_name %>" required>
                </div>
                <div class="col-md-6">
                  <label for="contact" class="form-label">Contact</label>
                  <input type="text" id="contact" name="reception_contact" class="form-control" value="<%= reception.reception_contact %>" required>
                </div>
              </div>

              <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select id="status" name="status" class="form-select" required>
                  <option value="Active" <%= reception.status === 'Active' ? 'selected' : '' %>>Active</option>
                  <option value="Inactive" <%= reception.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
                </select>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-success">Update</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
